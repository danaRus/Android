<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dana.carmanagement.NewCarActivity"
    tools:showIn="@layout/activity_new_car">

    <EditText
        android:id="@+id/newMake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write the make"/>

    <EditText
        android:id="@+id/newModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newMake"
        android:hint="Write the model"/>

    <TextView
        android:id="@+id/newYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newModel"
        android:hint="Choose the year"
        android:textSize="20dp"
        android:onClick="showYearDialog"/>

    <EditText
        android:id="@+id/priceNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newYear"
        android:hint="Write the price"/>

</RelativeLayout>
